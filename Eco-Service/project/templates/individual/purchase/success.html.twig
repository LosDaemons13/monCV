{% extends 'base.html.twig' %}

{% block title %}Succès | Éco-Service{% endblock %}

{% block content %}
    <div class="inner-banner has-base-color-overlay text-center" style="background: url({{ asset('theme/images/background/14.jpg') }});">
        <div class="container">
            <div class="box">
                <h1>Confirmation de paiement</h1>
            </div>
        </div>
    </div>
    <div class="breadcumb-wrapper">
        <div class="container">
            <div class="pull-left">
                <ul class="list-inline link-list">
                    <li>
                        <a href="{{ path('hub') }}">Accueil</a>
                    </li>
                    <li>
                        <a href="{{ path('app_account')}}">Mon compte</a>
                    </li>
                    <li>
                        Confirmation de paiement
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <section class="not-found-area">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="not-found-content">
                        <h1>Bravo !</h1>
                        <h3>Votre commande a été validée</h3>
                        <h4 style="margin-top:4rem;">Une confirmation va vous être envoyée par e-mail</h4>
                        <h2 style="margin-top:7rem;">Toute l'équipe d'Eco-Service vous remercie pour votre confiance et vous dit à très bientôt !</h2>
                    </div>
                </div>
                <div style="text-align: center; margin-top: 50px; margin-bottom: 50px">
                    <a href="{{ path('individual_products', {category_id: 'all'}) }}" class="thm-btn">Retour au site marchand</a>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
