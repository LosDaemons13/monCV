{% extends 'admin/base.html.twig' %}

{% block title %}Catégories | BackOffice{% endblock %}

{% block content %}
    <div class="row my-4 align-items-center">
        <div class="col-6">
            <h2><i class="fas fa-users mr-2"></i>Liste des catégories</h2>
        </div>
        <div class="col-6">
            <a type="button" class="btn btn-primary float-right" href="{{ path('admin_category_new') }}"><i class="fas fa-plus mr-2"></i>Ajouter une nouvelle catégorie</a>
        </div>
    </div>

    <table id="category" class="table table-striped table-bordered w-100">
        <thead>
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Icone</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tfoot>
            <tr>
                <th>Label</th>
                <th>Description</th>
                <th>Icone</th>
                <th>Actions</th>
            </tr>
        </tfoot>
    </table>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/admin/category.js') }}"></script>
{% endblock %}