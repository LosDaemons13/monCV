{% extends 'admin/base.html.twig' %}

{% block title %}Produits | BackOffice{% endblock %}

{% block content %}
    <div class="row my-4 align-items-center">
        <div class="col-6">
            <h2><i class="fas fa-users mr-2"></i>Liste des produits</h2>
        </div>
        <div class="col-6">
            <a type="button" class="btn btn-primary float-right" href="{{ path('admin_product_new') }}"><i class="fas fa-plus mr-2"></i>Ajouter un produit</a>
        </div>
    </div>

    <table  id="product" class="table table-striped table-bordered w-100" >
        <thead>
            <tr>
                <th>ID</th>
                <th>Label</th>
                <th>Description</th>
                <th>Prix unitaire</th>
                <th>Stock disponible</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tfoot>
            <tr>
                <th>ID</th>
                <th>Label</th>
                <th>Description</th>
                <th>Prix unitaire</th>
                <th>Stock disponible</th>
                <th>Créé le</th>
                <th>Actions</th>
            </tr>
        </tfoot>
    </table>


{% endblock %}
{% block javascripts %}
    <script src="{{ asset('js/admin/product.js') }}"></script>
{% endblock %}